@{
    ViewBag.Title = "Convert Job Seekers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<div>
    <div id='jqxWidget' style="font-size: 13px; font-family: Verdana; float: left; width: 100%">
        <div id="grid">
        </div>
        <div id="confirm">
            <div>Convert Job Seeker to Worker</div>
            <div>
                <div>Convert <span id="todelete"></span>?</div>
                <table>
                    <tr>
                        <td>First Name</td>
                        <td>@Html.TextBox("firstname")</td>
                        <td>Surname</td>
                        <td>@Html.TextBox("surname")</td>
                    </tr>
                    <tr>
                        <td>Contract Start Date</td>
                        <td><div id="startdate"></div>@Html.Hidden("startingdate")</td>
                    </tr>
                    <tr>
                        <td>Contract Status</td>
                        <td><div id="contractstatus"></div>@Html.Hidden("contractstatusid")</td>
                    </tr>
                    <tr>
                        <td>Contract End Date</td>
                        <td><div id="enddate"></div>@Html.Hidden("contractend")</td>
                    </tr>
                    <tr>
                        <td>Agency</td>
                        <td><div id="agencyname "></div>@Html.TextBox("agencyname")</td>
                    </tr>
                    <tr>
                        <td>Client</td>
                        <td>@Html.TextBox("clientname")</td>
                    </tr>
                    <tr>
                        <td>Comments</td>
                        <td>@Html.TextArea("comments")</td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td><input type="submit" value="Save" id='confirmOK' /></td>
                        <td><input type="submit" value="Cancel" id='confirmCancel' /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/intern/workerconvertgrid.js"></script>